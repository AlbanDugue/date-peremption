{% extends 'base.html.twig' %}

{% block title %}Home {{ parent() }}{% endblock %}

{% block main %}

    <div id="container-liste">
        {% for aliment in aliments %}
            <article>
                <div>
                    <p class="date-peremption">{{ aliment.datePeremption|date("m/d/Y") }}</p>
                </div>
                <div>
                    <p class="nom-aliment">{{ aliment.nom }}</p>
                </div>
                <div>
                    <a href="#"><button class="bouton-suppr"><i class="fas fa-trash icon-suppr"></i></button></a>
                </div>
            </article>
        {% endfor %}

        <!-- Trigger/Open The Modal -->
        <div id="bloc-ajout">
            <a href="#"><button id="bouton-ajout">+</button></a>
        </div>

        <!-- The Modal -->
        <div id="myModal" class="modal">

            <!-- Modal content -->
            <div class="modal-content">
                <span class="close">&times;</span>
                {{ form_start (alimentForm) }}

                {{ form_widget(alimentForm) }}

                <button id="validation-ajout" type="submit">Ajouter</button>
                {{ form_end (alimentForm) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        // Get the modal
        var modal = document.getElementById("myModal");

        // Get the button that opens the modal
        var btn = document.getElementById("bloc-ajout");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks the button, open the modal
        btn.onclick = function() {
            modal.style.display = "block";
        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function() {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
{% endblock %}
